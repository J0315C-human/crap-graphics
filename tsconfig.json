{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
  },
  "exclude": ["dist", "build", "node_modules"]
}
